widgetStyle === 'rounded' ? 'widget-rounded' : ''}`; const monthNames = ["Djehouty", "Phaophi", "Hout Horo", "Khoiak", "Tybi", "Mekhir", "Phamenoth", "Rennoutet", "Pakhon", "Payni", "Epiphi", "Mésori", "Jours Épagomènes"]; const dayNames = ["Thot", "Horus", "Isis", "Seth", "Nephtys", "Osiris", "Ra"]; function getEgyptianDate(gregorianDate) { const startOfYear = new Date(gregorianDate.getFullYear(), 6, 19); const daysSinceStart = Math.floor((gregorianDate - startOfYear) / (1000 * 60 * 60 * 24)); const month = Math.floor(daysSinceStart / 30); const day = (daysSinceStart % 30) + 1; return { month, day }; } function renderDateWidget() { const now = new Date(); const egyptianDate = getEgyptianDate(now); container.innerHTML = `<div class="widget-header">Date d'aujourd'hui</div><div class="widget-content date-widget"><div class="egyptian-date">${egyptianDate.day} ${monthNames[egyptianDate.month]} 6261</div>${showGregorian ? `<div class="gregorian-date">${now.toLocaleDateString('fr-FR')}</div>` : ''}</div>`; } function renderMiniCalendar() { const now = new Date(); const egyptianDate = getEgyptianDate(now); let calendarHTML = '<div class="widget-header">Mini Calendrier</div><div class="widget-content mini-calendar>'; for (let i = 1; i <= 30; i++) { calendarHTML += `<div class="day${i === egyptianDate.day ? ' current' : ''}">${i}</div>`; } calendarHTML += '</div>'; container.innerHTML = calendarHTML; } function renderEventsList() { const events = [ { date: '1 Djehouty', title: 'Nouvel An Égyptien' }, { date: '1 Phaophi', title: 'Début de la saison Akhet' }, { date: '1 Tybi', title: 'Début de la saison Peret' }, { date: '1 Pakhon', title: 'Début de la saison Chemou' } ]; let eventsHTML = '<div class="widget-header">Événements à venir</div><ul class="events-list>'; events.forEach(event => { eventsHTML += `<li><strong>${event.date}</strong>: ${event.title}</li>`; }); eventsHTML += '</ul>'; container.innerHTML = eventsHTML; } switch (widgetType) { case 'mini': renderMiniCalendar(); break; case 'events': renderEventsList(); break; case 'date': renderDateWidget(); break; default: renderDateWidget(); } if (showDarkMode) { document.body.style.backgroundColor = '#121212'; document.body.style.color = '#ffffff'; container.style.backgroundColor = '#1e1e1e'; }})();</script></body></html>
